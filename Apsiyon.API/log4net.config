<?xml version="1.0" encoding="utf-8" ?>

<log4net>
	<appender name="JsonFileLogger" type="log4net.Appender.FileAppender,log4net">
		<file value="D://Log//log.json" />
		<layout type="Apsiyon.Core.CrossCuttingConcerns.Logging.Log4Net.Layouts.JsonLayout, Apsiyon.Core" ></layout>
	</appender>

	<appender name="DatabaseLogger" type="MicroKnights.Logging.AdoNetAppender, MicroKnights.Log4NetAdoNetAppender">
		<bufferSize value="1" />
		<usetransactions value="false" />
		<connectionType value="Npgsql.NpgsqlConnection, Npgsql, Version=5.0.1.1, Culture=neutral" />
		<connectionString value="Server=localhost;Port=5432;Database=ApsiyonDB;User Id=postgres;Password=root;Integrated Security=true;Pooling=true;" />
		<commandText value="INSERT INTO Logs ([Detail],[Date],[Audit]) VALUES (@logDetail,@log_date,@audit)" />
		<parameter>
			<parameterName value="@logDetail" />
			<dbType value="String" />
			<size value="4000" />
			<layout type="Apsiyon.Core.CrossCuttingConcerns.Logging.Log4Net.Layouts.JsonLayout, Apsiyon.Core" />
		</parameter>
		<parameter>
			<parameterName value="@log_date" />
			<dbType value="DateTime" />
			<layout type="log4net.Layout.RawTimeStampLayout" />
		</parameter>
		<parameter>
			<parameterName value="@audit" />
			<dbType value="String" />
			<size value="50" />
			<layout type="log4net.Layout.RawTimeStampLayout" value="%level" />
		</parameter>
	</appender>

	<logger name="JsonFileLogger">
		<level value="All" />
		<appender-ref ref="JsonFileLogger" />
	</logger>

	<logger name="DatabaseLogger">
		<level value="All" />
		<appender-ref ref="DatabaseLogger" />
	</logger>

	<root>
		<level value="DEBUG" />
		<appender-ref ref="DatabaseLogger" />
	</root>
</log4net>


